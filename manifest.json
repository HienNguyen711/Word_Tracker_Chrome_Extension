{
    "manifest_version": 2,

    "name": "Words Tracker",
    "description": "Tracks a user's words that user want to save for later search.",
    "version": "1.0",

    "browser_action": {
        "default_icon":"icon.png",
        "default_popup":"popup.html"
    },

    "options_page" : "options.html",

    "background": {
        "scripts" : ["eventPage.js"],
        "persistent" : false
    },

    "permissions" : [
        "storage",
        "notifications",
        "contextMenus"
    ]
}
